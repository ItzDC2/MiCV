<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="formacionTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="desdeColumn" prefWidth="94.0" text="Desde" />
          <TableColumn fx:id="hastaColumn" prefWidth="170.0" text="Hasta" />
            <TableColumn fx:id="denominacionColumn" prefWidth="204.0" text="Denominación" />
            <TableColumn fx:id="empleadorColumn" prefWidth="91.0" text="Empleador" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <right>
      <VBox minWidth="50.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Añadir" />
            <Button fx:id="removeButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Eliminar" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
