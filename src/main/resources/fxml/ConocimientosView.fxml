<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="conocimientosTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="denominacionColumn" minWidth="50.0" prefWidth="128.0" text="Denominación" />
          <TableColumn fx:id="nivelColumn" minWidth="50.0" prefWidth="88.0" text="Nivel" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addConocimientoButton" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddConocimientoAction" text="Añadir conocimiento" />
            <Button fx:id="addIdiomaButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAddIdiomaAction" text="Añadir idioma" />
            <Button fx:id="eliminarButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onEliminarAction" text="Eliminar" />
         </children>
         <padding>
            <Insets left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
